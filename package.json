  "description": "Comprehensive collection of Datastar plugins - positioning, animations, utilities, and UI components",
  "main": "dist/anchor.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "tsc --watch & npx serve . -p 8080",
